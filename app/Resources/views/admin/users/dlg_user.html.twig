{% form_theme form 'form.html.twig' %}

<div class="dialog">
    {{ form_start(form) }}
    <fieldset>
        {{ form_row(form.username) }}
        {{ form_row(form.fullname) }}
        {{ form_row(form.email) }}
        {{ form_row(form.description) }}
        {% if not user.ldap %}
        {{ form_row(form.password) }}
        {{ form_row(form.confirmation) }}
        {% endif %}
        {{ form_row(form.locale) }}
        {{ form_row(form.theme) }}
        {{ form_row(form.timezone) }}
        {{ form_row(form.admin) }}
        {{ form_row(form.disabled) }}
    </fieldset>
    {{ form_end(form) }}
</div>
